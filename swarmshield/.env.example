# LLM Configuration
LLM_API_KEY=your_api_key_here
LLM_PROVIDER=openai  # openai, anthropic, etc.
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# Network Configuration
NETWORK_INTERFACE=eth0
PACKET_CAPTURE_TIMEOUT=60
ANOMALY_THRESHOLD=0.8

# Database Configuration (optional)
DB_HOST=localhost
DB_PORT=5432
DB_USER=swarmshield
DB_PASSWORD=password
DB_NAME=swarmshield

# Mininet Configuration (optional)
MININET_ENABLED=false
MININET_CONTROLLER_IP=127.0.0.1
MININET_CONTROLLER_PORT=6633

# Demo Configuration
DEMO_MODE=true
DEMO_ATTACK_TYPE=nmap  # nmap, hping3, etc.
DEMO_DURATION=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/swarmshield.log

# Optional Features
ENABLE_DASHBOARD=false
ENABLE_MIRAGE=true
ENABLE_SDN_CONTROL=false
