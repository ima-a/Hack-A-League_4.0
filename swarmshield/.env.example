# LLM Configuration (used by LLMClient in each agent)
# Set OPENAI_API_KEY to enable LLM enrichment. Agents degrade gracefully
# if this is absent â€” all algorithmic features continue to work.
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o          # model name passed to LLMClient
LLM_TEMPERATURE=0.0        # keep at 0.0 to minimise hallucinations

# Network Configuration
NETWORK_INTERFACE=eth0
PACKET_CAPTURE_TIMEOUT=60
ANOMALY_THRESHOLD=0.8

# Database Configuration (optional)
DB_HOST=localhost
DB_PORT=5432
DB_USER=swarmshield
DB_PASSWORD=password
DB_NAME=swarmshield

# Mininet Configuration (optional)
MININET_ENABLED=false
MININET_CONTROLLER_IP=127.0.0.1
MININET_CONTROLLER_PORT=6633

# Demo Configuration
DEMO_MODE=true
DEMO_ATTACK_TYPE=nmap  # nmap, hping3, etc.
DEMO_DURATION=300

# Agent Network Configuration
# IP address of the coordinator/server machine on the local network
COORDINATOR_IP=192.168.1.100

# Port the coordinator Flask server runs on (default 5000)
COORDINATOR_PORT=5000

# IP address of the honeypot laptop on the local network
HONEYPOT_IP=192.168.1.99

# Port this responder agent's Flask server runs on (default 5003)
RESPONDER_PORT=5003

# Unique name for this responder instance (e.g. responder-1, responder-2)
RESPONDER_ID=responder-1

# IP of the analyzer agent machine
ANALYZER_IP=192.168.1.101

# How many minutes before a blocked IP is automatically unblocked (default 5)
AUTO_UNBLOCK_MINUTES=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/swarmshield.log

# Optional Features
ENABLE_DASHBOARD=false
ENABLE_MIRAGE=true
ENABLE_SDN_CONTROL=false
