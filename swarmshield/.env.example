# LLM Configuration
LLM_API_KEY=your_api_key_here
LLM_PROVIDER=openai  # openai, anthropic, etc.
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# Network Configuration
NETWORK_INTERFACE=eth0
PACKET_CAPTURE_TIMEOUT=60
ANOMALY_THRESHOLD=0.8

# Database Configuration (optional)
DB_HOST=localhost
DB_PORT=5432
DB_USER=swarmshield
DB_PASSWORD=password
DB_NAME=swarmshield

# Mininet Configuration (optional)
MININET_ENABLED=false
MININET_CONTROLLER_IP=127.0.0.1
MININET_CONTROLLER_PORT=6633

# Demo Configuration
DEMO_MODE=true
DEMO_ATTACK_TYPE=nmap  # nmap, hping3, etc.
DEMO_DURATION=300

# Agent Network â€” Coordinator & Responder
# IP address of the coordinator/server machine on the local network
COORDINATOR_IP=192.168.1.100

# Port the coordinator Flask server runs on
COORDINATOR_PORT=5000

# IP address of the honeypot laptop on the local network
HONEYPOT_IP=192.168.1.99

# Port this responder agent's Flask server runs on
RESPONDER_PORT=5003

# Unique name/identifier for this responder instance
RESPONDER_ID=responder-1

# IP address of the analyzer agent machine
ANALYZER_IP=192.168.1.101

# How many minutes before a blocked IP is automatically unblocked
AUTO_UNBLOCK_MINUTES=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/swarmshield.log

# Optional Features
ENABLE_DASHBOARD=false
ENABLE_MIRAGE=true
ENABLE_SDN_CONTROL=false
